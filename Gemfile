gem 'turbolinks'
gem 'jbuilder', '~> 1.0.1'


group :development, :test do
  gem 'debugger'
  gem 'rspec-rails'
  gem 'guard'
  gem 'guard-spork'
  gem 'guard-rspec'
  gem 'spork'
  gem 'spork-rails', git: 'git://github.com/koriroys/spork-rails.git'
end

group :test do
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'libnotify'
  gem 'rb-inotify', :require => false
