source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0.beta1'

gem 'sqlite3'
gem 'sass-rails',   '~> 4.0.0.beta1'
gem 'uglifier', '>= 1.0.3'
gem 'coffee-rails', '~> 4.0.0.beta1'
